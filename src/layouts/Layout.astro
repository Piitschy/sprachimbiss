---
export interface Props {
	title?: string;
	description?: string;
}

const { title = "Sprachimbiss - Vita Sarvirova", description = "Professioneller Online-Sprachunterricht" } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
	</head>
	<body>
		<nav class="navbar">
			<div class="nav-container">
				<div class="nav-logo">Sprachimbiss</div>
				<div class="nav-menu">
					<a href="/" class="nav-link active">Start</a>
					<a href="/impressum" class="nav-link">Impressum</a>
				</div>
			</div>
		</nav>
		<slot />
		<footer class="footer">
			<div class="footer-container">
				<p>&copy; 2026 Sprachimbiss Vita Sarvirova. Alle Rechte vorbehalten.</p>
				<div class="footer-links">
					<a href="/impressum">Impressum</a>
					<a href="/impressum#datenschutz">Datenschutz</a>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html, body {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		line-height: 1.6;
		color: #2c3e50;
		background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
		min-height: 100vh;
	}

	.navbar {
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		padding: 1rem 0;
		position: fixed;
		top: 0;
		width: 100%;
		z-index: 1000;
		box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
	}

	.nav-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.nav-logo {
		font-family: 'Playfair Display', serif;
		font-size: 1.5rem;
		font-weight: 700;
		color: #2c3e50;
	}

	.nav-menu {
		display: flex;
		gap: 2rem;
	}

	.nav-link {
		text-decoration: none;
		color: #4a5568;
		font-weight: 500;
		transition: color 0.3s ease;
		position: relative;
	}

	.nav-link:hover, .nav-link.active {
		color: #667eea;
	}

	.nav-link.active::after {
		content: '';
		position: absolute;
		bottom: -5px;
		left: 0;
		right: 0;
		height: 2px;
		background: #667eea;
	}

	.hero {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 6rem 2rem 2rem;
	}

	.hero-container {
		max-width: 1200px;
		text-align: center;
		z-index: 1;
	}

	.hero-content {
		margin-bottom: 3rem;
	}

	.hero-title {
		font-family: 'Playfair Display', serif;
		font-size: clamp(2.5rem, 8vw, 4.5rem);
		font-weight: 700;
		margin-bottom: 1.5rem;
		line-height: 1.2;
	}

	.title-main {
		display: block;
		color: #2c3e50;
	}

	.title-sub {
		display: block;
		font-size: clamp(1.2rem, 3vw, 1.8rem);
		color: #667eea;
		font-weight: 400;
		margin-top: 0.5rem;
	}

	.hero-description {
		font-size: 1.2rem;
		color: #4a5568;
		margin-bottom: 2rem;
		font-weight: 300;
	}

	.coming-soon {
		display: inline-block;
	}

	.badge {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		padding: 0.5rem 1.5rem;
		border-radius: 50px;
		font-weight: 500;
		font-size: 0.9rem;
		display: inline-block;
		margin-bottom: 1rem;
		box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
	}

	.coming-soon-text {
		font-size: 1.1rem;
		color: #4a5568;
		font-weight: 400;
		max-width: 500px;
		margin: 0 auto;
	}

	.hero-decoration {
		margin-top: 3rem;
	}

	.language-symbols {
		display: flex;
		justify-content: center;
		gap: 2rem;
		font-size: 2.5rem;
		animation: float 3s ease-in-out infinite;
	}

	.symbol {
		animation: bounce 2s ease-in-out infinite;
	}

	.symbol:nth-child(2) {
		animation-delay: 0.2s;
	}

	.symbol:nth-child(3) {
		animation-delay: 0.4s;
	}

	.footer {
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(10px);
		padding: 2rem 0;
		text-align: center;
		margin-top: 4rem;
	}

	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.footer-links {
		display: flex;
		gap: 2rem;
	}

	.footer-links a {
		text-decoration: none;
		color: #4a5568;
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.footer-links a:hover {
		color: #667eea;
	}

	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-10px); }
	}

	@keyframes bounce {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-15px); }
	}

	@media (max-width: 768px) {
		.nav-container {
			flex-direction: column;
			gap: 1rem;
		}

		.nav-menu {
			gap: 1rem;
		}

		.hero {
			padding: 8rem 1rem 2rem;
		}

		.language-symbols {
			font-size: 2rem;
			gap: 1.5rem;
		}

		.footer-container {
			flex-direction: column;
			text-align: center;
		}

		.footer-links {
			justify-content: center;
		}
	}
</style>
