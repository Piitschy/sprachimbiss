<style>
	.imprint-content {
		padding: 8rem 2rem 4rem;
		min-height: 100vh;
	}

	.content-container {
		max-width: 800px;
		margin: 0 auto;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		border-radius: 15px;
		padding: 3rem;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
	}

	h1 {
		font-family: 'Playfair Display', serif;
		font-size: 2.5rem;
		color: #2c3e50;
		margin-bottom: 2rem;
		text-align: center;
	}

	h2 {
		font-family: 'Playfair Display', serif;
		font-size: 1.8rem;
		color: #667eea;
		margin: 2.5rem 0 1rem;
		border-bottom: 2px solid #667eea;
		padding-bottom: 0.5rem;
	}

	h3 {
		font-family: 'Playfair Display', serif;
		font-size: 1.3rem;
		color: #2c3e50;
		margin: 1.5rem 0 0.5rem;
	}

	.imprint-section {
		margin-bottom: 2rem;
	}

	.imprint-item {
		line-height: 1.8;
		color: #4a5568;
	}

	.imprint-item p {
		margin-bottom: 1rem;
	}

	.imprint-item strong {
		color: #2c3e50;
		font-weight: 600;
	}

	@media (max-width: 768px) {
		.imprint-content {
			padding: 8rem 1rem 2rem;
		}

		.content-container {
			padding: 2rem 1.5rem;
		}

		h1 {
			font-size: 2rem;
		}

		h2 {
			font-size: 1.5rem;
		}

		h3 {
			font-size: 1.2rem;
		}
	}
</style>